@page "/button-window-integration"

<TelerikWindow Visible="true">
    <WindowTitle>
        Window
    </WindowTitle>
    <WindowActions>
        <WindowAction Name="Close"></WindowAction>
    </WindowActions>
    <WindowContent>
        <TelerikButton OnClick="@(() => Content = "Custom Content")"
                       Class="my-button" 
                       Id="window-test-button">Add Content</TelerikButton>
        @Content
    </WindowContent>
</TelerikWindow>

@code {
    public string Content { get; set; }
}
