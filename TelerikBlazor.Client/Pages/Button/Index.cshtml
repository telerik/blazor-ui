@page "/button/index"

<h4>Basic Button</h4>

<KendoButton OnClick="@MyClickHandler">Click me!</KendoButton>
@thankYoString

@functions {
	string thankYoString;

	protected void MyClickHandler()
	{
		thankYoString = string.Format("Thank you for clicking me at {0:HH:mm:ss} on {0:dd MMM yy}. Now you can write front-end with C#, yay!", DateTime.Now);
		StateHasChanged();
	}
}

<h4>Styled Buttons</h4>

<KendoButton Primary="true">Primary Button</KendoButton>

<KendoButton Class="RedText">Red Text Button</KendoButton>

<h4>Buttons with icons</h4>

<KendoButton SpriteClass="k-icon netherlandsFlag">Sprite</KendoButton>
<KendoButton Icon="filter">Icon</KendoButton>
<KendoButton ImageUrl="https://demos.telerik.com/kendo-ui/content/shared/icons/sports/snowboarding.png">Image Url</KendoButton>

<h4>Disabled Button</h4>

<KendoButton Enabled="false">Disabled Button</KendoButton>


<style>
	.RedText,
	.RedText:hover {
		color: red;
	}

	.netherlandsFlag {
		background-image: url("https://demos.telerik.com/kendo-ui/content/shared/styles/flags.png");
		background-position: 0 -64px;
	}
</style>
