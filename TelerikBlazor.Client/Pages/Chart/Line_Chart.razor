    <TelerikChartLegend Position="ChartLegendPosition.Bottom"></TelerikChartLegend>

    <TelerikChartSeriesItems>
        <TelerikChartSeries Type="ChartSeriesType.Line" Name="India" Data="@Data" Field="@nameof(ModelData.Series1)"></TelerikChartSeries>
