<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">SubscribeToLocationChanged</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span>Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="products" Match="NavLinkMatch.All">
                <span class="oi oi-plus" aria-hidden="true"></span>Products
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="products/computer-peripherals" Match="NavLinkMatch.All">
                <span class="oi oi-plus" aria-hidden="true"></span>Computer Peripherals
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="products/computer-peripherals/keyboards" Match="NavLinkMatch.All">
                <span class="oi oi-plus" aria-hidden="true"></span>Keyboards
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="products/computer-peripherals/keyboards/gaming-keyboards" Match="NavLinkMatch.All">
                <span class="oi oi-plus" aria-hidden="true"></span>Gaming Keyboards
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
