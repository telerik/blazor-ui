@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<ConfirmButton OnClick="@IncrementCount" ConfirmText="Are you sure you want to add more?" ButtonText="Counter" ConfirmTitle="Please confirm!" Icon="@SvgIcon.Plus" />

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
