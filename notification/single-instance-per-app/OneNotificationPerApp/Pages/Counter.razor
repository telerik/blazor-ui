@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    [CascadingParameter]
    protected MainLayout layoutRef { get; set; }

    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
        layoutRef.ShowNotification(new NotificationModel()
        {
            Text = "From COUNTER Page, counter: " + currentCount,
            ThemeColor = ThemeColors.Info,
            CloseAfter = 2000,
            Closable = true
        });
    }
}