<h3>FirstComponent</h3>

<button @onclick="@ShowNotification">Show Notification from First Component</button>

<SecondComponent></SecondComponent>

@code {
    [CascadingParameter]
    protected MainLayout layoutRef { get; set; }

    void ShowNotification()
    {
        layoutRef.ShowNotification(new NotificationModel()
        {
            Text = "From First Component",
            ThemeColor = ThemeColors.Primary,
            CloseAfter = 0,
            Closable = false
        });
    }
}
